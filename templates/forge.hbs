<form autocomplete="off" onsubmit="event.preventDefault();">
  {{#if error}}
  <div class="error">{{error}}</div>
  {{/if}}
  {{#unless error}}
  
  <nav class="sheet-tabs tabs">
    {{#each modules as |m|}}
      <a class="item {{#if m.active}}active{{/if}}" data-tab="{{m.id}}"><i class="{{m.icon}}"></i> {{m.name}}</a>
    {{/each}}
  </nav>

  <div class="main">
    <p>
      <div class="description">{{{activeModule.description}}}</div>
      <div class="form-group search">
        <input id="search" type="text" placeholder="{{localize "mtte.search"}}"></input>
        <button class="search"><i class="fas fa-search"></i></button>
        {{#if packs}}
        <select class="packlist">
          <option value="-1">{{localize "mtte.allPacks"}} ({{assetsCount}})</option>
          {{#each packs as |p|}}<option value="{{p.idx}}" {{#if p.isRemote}}class="cloud"{{/if}}>{{pretty p.publisher}} | {{pretty p.name}} {{#unless p.special}}({{pretty p.count}}){{/unless}}</option>{{/each}}
        </select>
        {{#if supportsModes}}
        <div class="filepicker"><div class="form-fields display-modes">
            <a class="display-mode mode-browse" title="{{localize "FILES.DisplayModeList"}}">
                <i class="fas fa-bars"></i>
            </a>
            <a class="display-mode mode-list" title="{{localize "FILES.DisplayModeThumbs"}}">
                <i class="fas fa-th-list"></i>
            </a>
            <a class="display-mode mode-tiles" title="{{localize "FILES.DisplayModeTiles"}}">
                <i class="fas fa-th-large"></i>
            </a>
        </div></div>
        {{/if}}
        {{/if}}
      </div>
      <div class="list">
        {{#each assets as |a|}}{{{a}}}{{/each}}
      </div>
    </p>
    {{{footer}}}
    <footer>
      <div class="actions">
        {{#each activeModule.actions as |a|}}<button class="{{a.id}}" title="{{a.help}}"><i class="{{a.icon}}"></i> {{a.name}}</button>{{/each}}
      </div>
      <div class="actions">
        {{#each activeModule.actionsExt as |a|}}<button class="{{a.id}}" title="{{a.help}}"><i class="{{a.icon}}"></i> {{a.name}}</button>{{/each}}
      </div>
    </footer>
  </div>
  
  {{/unless}}
  <img class="logo" src="modules/moulinette-core/img/moulinette.png" width="60"/>
  <p>
    {{#unless user.patron}}
    {{{localize "mtte.patreonSupportMe"}}}<br/>
    {{/unless}}
    {{#if user.patron}}
    {{localize "mtte.patron"}} <i class="fas fa-heart red"></i> ({{user.patron}}). {{localize "mtte.patreonThanks"}}<br/>
    {{/if}}
    Join me on <a href="https://discord.gg/xg3dcMQfP2" target="_blank">Moulinette Discord</a> to follow development. <br/>
    <a href="https://github.com/SvenWerlen/moulinette-core">{{localize "mtte.seeDoc"}}</a> {{localize "mtte.learnMore"}}
  </p>
</form>
